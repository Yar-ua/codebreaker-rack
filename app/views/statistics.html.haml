%p.lead.text-white-70 Top of Players:
%hr.mb-4/
.table-responsive-md.scores
  %table.table.table-striped.table.table-sm
    %thead
      %tr
        %th{:scope => "col"} #
        %th{:scope => "col"} Name
        %th{:scope => "col"} Level
        %th{:scope => "col"} Attempts Left
        %th{:scope => "col"} Hints Left
        %th{:scope => "col"} Date
    %tbody
      - @sorted_stats.map.with_index do |stats, index|
        %tr
          %th{:scope => "row"}= index + 1
          %td= stats.name
          %td= stats.difficulty
          %td
            = stats.attempts_total - stats.attempts_used
            \/#{stats.attempts_total}
          %td
            = stats.hints_total - stats.hints_used
            \/#{stats.hints_total}
          %td ---datetime---
%hr.mb-4/
